<odoo>
    <!-- Form View -->
    <record id = "view_estate_property_offer_form" model = "ir.ui.view">
        <field name = "name">estate.property.offer.form</field>
        <field name = "model">estate.property.offer</field>
        <field name = "arch" type = "xml">
            <form string = "Real Estate Property Offer">
                <sheet>
                    <group>
                        <field name = "price"/>
                        <field name = "partner_id"/>
                        <field name = "status"/>
                        <field name = "validity"/>
                        <field name = "date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List or Tree View -->
    <record id = "estate_property_offer_tree_view" model = "ir.ui.view">
        <field name = "name">estate.property.offer.tree</field>
        <field name = "model">estate.property.offer</field>
        <field name = "arch" type = "xml">
            <tree string = "Real Estate Property Offers" create = "true" edit = "true" delete = "true">
                <field name = "property_id"/>
                <field name = "partner_id"/>
                <field name = "price"/>
                <button string = '✔ Accept' type = "object"  name = "action_accept"/>
                <button string = '✖ Refused' type = "object"  name = "action_Refused"/>
                <field name = "status"/>
                <field name = "property_type_id"/>
                <field name = "validity"/>
                <field name = "date_deadline"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id = "offer_record" model = "ir.actions.act_window">
        <field name = "name">Offers</field>
        <field name = "res_model">estate.property.offer</field>
        <field name = "view_mode">tree,form</field>
    </record>
</odoo>
